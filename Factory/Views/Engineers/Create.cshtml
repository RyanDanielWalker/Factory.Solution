@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4><span class="underLine">Add A New Engineer</span></h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })
  @Html.Label("License Renewal Date")
  @Html.TextBoxFor(model => model.LicenseDate, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker", @alt = "date",
@minlength = "10", @placeholder = DateTime.Now.Date.ToString("MM/dd/yyyy"), @maxlength = "10", @data_val="true"})

  <input type="submit" value="Add New Engineer" class="btn btn-outline-success" />
}
<div class="flex">
  @Html.ActionLink("Show All Engineers", "Index", "Engineers", null, new { @class = "btn btn-outline-dark"})
  @Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-outline-dark"})
</div>