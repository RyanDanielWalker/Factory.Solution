@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.Label("License Renewal Date")
  @Html.TextBoxFor(model => model.LicenseDate, new { @type="date", @class = "form-control datepicker"})

  <input type="submit" value="Save" class="btn btn-outline-primary" />
}
@Html.ActionLink("View all Engineers", "Index", "Engineers", null, new { @class = "btn btn-outline-dark" })